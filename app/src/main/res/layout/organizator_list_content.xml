<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_border"
    android:orientation="vertical"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/organizator_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Васильев"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/organizator_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Василий"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/organizator_middlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Васильевич"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>